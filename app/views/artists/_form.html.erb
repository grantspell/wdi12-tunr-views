<%# Partial For used in both the Edit and New Route %>
<%# Rails is smart enough to know the difference between the update and new page %>
<%# Form Helpers: http://guides.rubyonrails.org/form_helpers.html %>
<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :nationality %>
  <%= f.text_field :nationality %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.submit %>
<% end %>